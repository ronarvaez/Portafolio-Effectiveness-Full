--1.1
SELECT DISTINCT
a.country
,b.city
,b.business_area_id
,b.business_area_name
,a.bd_area_id
,b.bd_area_name
,b.bd_area_owner_online
,c.bd_area_owner_offline
FROM (
    SELECT DISTINCT
    a.country
    ,a.bd_area_id
    FROM (
        SELECT DISTINCT
        country_code AS country
        ,area_id AS bd_area_id
        FROM soda_international_dwm.dwm_bizopp_wide_d_whole
        WHERE concat_ws('-', year, month, day) = '${end_date}'
        AND country_code IN ('MX','CO','CR','PE')
    ) AS a

    JOIN (
        SELECT
        CONCAT('bdArea|',area_id) AS bd_area_id
        FROM soda_international_dwd.dwd_zone_info_d_whole
        WHERE concat_ws('-', year, month, day) = '${end_date}'
        AND country_code IN ('MX','CO','CR','PE')
        AND is_del = 0
        AND IF(
            CONCAT('bdArea|',area_id) IN (
                --Whitelist de Areas Lanzadas no utilizables
                'bdArea|4472439022','bdArea|195904667749','bdArea|182302539974','bdArea|240515285246','bdArea|5764607671685418186','bdArea|238128726253','bdArea|118695919712','bdArea|53659041957','bdArea|203357946046','bdArea|265081323607','bdArea|85246345407','bdArea|5764607738949470597','bdArea|5764607628098210175','bdArea|5764607576566991240','bdArea|5764607524704422284','bdArea|5764607627817191807','bdArea|5764607661195463070','bdArea|5764607549736026351','bdArea|5764607616945553649','bdArea|5764607551875122958','bdArea|5764607570485249797','bdArea|5764607657521252106','bdArea|5764607779336423171','bdArea|5764607662726383371','bdArea|5764607780166895363','bdArea|5764607780456302339','bdArea|5764607562314745716','bdArea|174480162870','bdArea|178334728237','bdArea|83203719237','bdArea|109489422514','bdArea|191211241556','bdArea|5764607774051600136','bdArea|5764607738139969291','bdArea|53755511014','bdArea|91235811401','bdArea|86416556508','bdArea|115600523501','bdArea|174736015447','bdArea|240263627006','bdArea|27746631910','bdArea|5764607578525729523','bdArea|5764607571101811258','bdArea|5764607732343440178','bdArea|5764607544874828595','bdArea|5764607732356023090','bdArea|5764607732578321202','bdArea|5764607717319442611','bdArea|5764607794863734965'
            )
            ,0
            ,IF(
                is_valid = 3
                ,1
                ,0
            )
        ) = 1
    ) AS b
    ON a.bd_area_id = b.bd_area_id

    UNION ALL

    SELECT
    country
    ,CONCAT("bdArea|",SUBSTR(bd_area_id, 2)) as bd_area_id
    FROM dp_det_data.bd_area_owners_sept24_v4	


) AS a

LEFT JOIN (
    SELECT DISTINCT
    country_code AS country
    ,city_name AS city
    ,district_id AS business_area_id
    ,district_name AS business_area_name
    ,area_id AS bd_area_id
    ,area_name AS bd_area_name
    ,area_maintainer AS bd_area_owner_online   
    FROM soda_international_dwm.dwm_bizopp_wide_d_whole
    WHERE concat_ws('-', year, month, day) = '${end_date}'
    AND country_code IN ('MX','CO','CR','PE')
) AS b
ON a.country = b.country
AND a.bd_area_id = b.bd_area_id

LEFT JOIN (
    SELECT
    country
    ,CONCAT("bdArea|",SUBSTR(bd_area_id, 2)) as bd_area_id
    ,rep_sales AS bd_area_owner_offline
    FROM dp_det_data.bd_area_owners_sept24_v4	

) AS c
ON a.country = c.country
AND a.bd_area_id = c.bd_area_id

ORDER BY a.country,b.city,b.business_area_name,b.bd_area_name
